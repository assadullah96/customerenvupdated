{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
        "type": "string",
        "metadata": {
          "description": "Location of your resources. Default location is eastUS"
          }
        },
  
  "useExistingOrNewKeyVault": {
        "type": "string",
        "allowedValues": [ "new", "existing" ],
        "metadata": {
            "description": "Please specify if you want to use existing key vault or you want to create new one?."
        },
        "defaultValue": "new"
        
        },

    "keyVaultName": {
        "type": "string",
        "metadata": {
          "description": "Specifies the name of the key vault."
          }
        },
    
      "SASBlobUriValue": {
          "type": "securestring",
          "metadata": {
            "description": "Specifies the value of the SAS Blob URI that you want to create."
          }
      }
  },

   "variables": {
      "secretName": "SASURiSecret",
      "secretValue": "[parameters('SASBlobUriValue')]",
      "tenantId": "[subscription().tenantId]"
   },

  "resources": [
    {
        "condition": "[equals(parameters('useExistingOrNewKeyVault'),'new')]", 
        "type": "Microsoft.KeyVault/vaults",
        "apiVersion": "2019-09-01",
        "name": "[parameters('keyVaultName')]",
        "location": "[parameters('location')]",
        "tags": {
            "Environment": "Customers",
            "AssociatedDataSet": "USAFacts"
        },
        "properties": {
          "tenantId": "[variables('tenantId')]",
          "enableSoftDelete": false,
          "accessPolicies": [],
          "sku": {
            "name": "Standard",
            "family": "A"
          },
          "networkAcls": {
            "defaultAction": "Allow",
            "bypass": "AzureServices"
          }
        }
      },
      {
        "condition": "[equals(parameters('useExistingOrNewKeyVault'),'new')]", 
        "type": "Microsoft.KeyVault/vaults/secrets",
        "apiVersion": "2019-09-01",
        "name": "[concat(parameters('keyVaultName'), '/', variables('secretName'))]",
        "location": "[parameters('location')]",
        "dependsOn": [
          "[resourceId('Microsoft.KeyVault/vaults', parameters('keyVaultName'))]"
        ],
        "properties": {
          "value": "[variables('secretValue')]"
        }
      }
  ],
  "outputs": {
      "SASSecretUri": {
          "type": "string",
          "value": "[resourceId('Microsoft.KeyVault/vaults', parameters('keyVaultName'))]"
      }
  }
}
